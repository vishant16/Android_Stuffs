<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishu.bluetooth.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:fontFamily="serif-monospace"
        android:text="BlueTooth"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:text="Turn On"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/dis"
        android:layout_alignStart="@+id/dis"
        android:layout_alignRight="@+id/dis"
        android:layout_alignEnd="@+id/dis"/>

    <Button
        android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Discoverable"
        android:layout_below="@+id/on"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dis"
        android:layout_alignLeft="@+id/dis"
        android:layout_alignRight="@+id/dis"
        android:layout_alignStart="@+id/dis"
        android:layout_below="@+id/dis"
        android:layout_marginTop="26dp"
        android:text="TURN OFF"/>

</RelativeLayout>
